<Window x:Class="GraphAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Graph Analyzer" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="GraphCanvas" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseLeftButtonDown="Canvas_MouseLeftButtonDown"/>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical" Margin="10">
            <Button Content="Додати вершину" Click="AddVertex_Click" Width="120" Margin="0 0 0 5"/>
            <Button Content="Очистити" Click="ClearCanvas_Click" Width="120" Margin="0 5"/>
            <Button Content="Перевірити на цикл" Click="CheckCycles_Click" Width="120" Margin="0 5"/>
            <Button Content="Обхід DFS" Click="DFS_Click" Width="120" Margin="0 5"/>
            <Button Content="Обхід BFS" Click="BFS_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
